    <select id="getByFoodId" parameterType="int" resultMap="FoodLabelInf">
        SELECT * FROM foodlabel WHERE id=#{food_id}
    </select>

    <select id="getAllFoodLabelName" resultType="string">
        SELECT name from label
    </select>

    <insert id="insert" parameterType="po.FoodLabel">
        INSERT INTO foodlabel(label_id,food_id) VALUES (#{label.id},#{food.id})
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM foodlabel
        WHERE id=#{id}
    </delete>

    <update id="update" parameterType="po.FoodLabel">
        UPDATE foodlabel
        SET label_id=#{label.id}
        WHERE id={food.id}
    </update>

</mapper>